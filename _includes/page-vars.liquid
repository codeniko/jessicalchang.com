{% if page != null %}
    {% assign pageName = page.name %}

    {% assign footerClassnames = "" %}
    {% assign headerClassnames = "" %}
    {% assign showOverlappingBackgroundHeader = false %}
    {% assign showFooterDivider = false %}

    {% if pageName == "Spotify" or pageName == "Heem" or pageName == "about.html" or pageName == "index.html" %}
        {% assign footerClassnames = "gray2" %}
    {% endif %}

    {% if pageName == "index.html" %}
        {% assign headerClassnames = "white" %}
    {% endif %}

    {% if pageName == "index.html" or pageName == "about.html" %}
        {% assign showFooterDivider = true %}
    {% endif %}

    {% if pageName == "PayPal Shopping" %}
        {% assign showOverlappingBackgroundHeader = true %}
    {% endif %}
{% endif %}

